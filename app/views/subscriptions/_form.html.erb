<%= form_for [@event, subscription] do |f| %>
    <%= render partial: 'partials/form_errors', locals: {model: subscription} %>

    <% unless user_signed_in? %>
        <div class="form-group">
          <%= f.label :user_name %>
          <%= f.text_field :user_name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :user_email %>
          <%= f.text_field :user_email, class: 'form-control' %>
        </div>
    <% end %>  

    <% unless current_user_can_edit?(@event) %>
      <h4><%= t('about_the_event.i_agree')%></h4>      
      <div class="actions">
        <%= f.submit t('subscriptions.subscription.subscribe'), class: 'btn btn-primary' %>
      </div>
    <% end %>
<% end %>
